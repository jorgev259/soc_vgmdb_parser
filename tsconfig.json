{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2022", "DOM"],
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "rootDir": "./src/",
    "outDir": "./lib/"
  },
  "include": ["src/**/*"]
}
